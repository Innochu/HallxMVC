@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-white">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-dark">
                <i class="bi bi-cart-plus-fill"></i>  Add Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ISBN</td>
                    <td>@item.Price</td>
                    <td>@item.Author</td>
                   
                    <td>@item.CategoryId</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-edit mx-2"><i class="bi bi-pencil-fill"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete mx-2"><i class="bi bi-trash3"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>


@* the @ sign allows you write c# code in your views this is primarily meant for html only *@